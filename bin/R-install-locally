#!/app/bin/Rscript

suppressPackageStartupMessages(library(BiocInstaller, quietly=TRUE))

venv <- Sys.getenv('VIRTUAL_ENV')
stopifnot(nchar(venv) > 0)
lib <- .expand_R_libs_env_var(file.path(dirname(venv), 'R/R.%v-library'))
dir.create(lib, showWarnings=FALSE, recursive=TRUE)

packages <- c(
    "argparse",
    "latticeExtra"
)

install.packages(packages, lib=lib, repos="http://cran.fhcrc.org/", dependencies=TRUE)

## bioconductor packages
# biocLite(c("clst", "clstutils", "ROC"), lib=lib, suppressUpdates=TRUE, dependencies=TRUE)


